<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainViewgroup">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/restaurant" />

    <TextView
        android:id="@+id/headingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Eat Social"
        android:textColor="@color/cardview_light_background"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/subHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/headingText"
        android:layout_alignStart="@+id/headingText"
        android:layout_below="@+id/headingText"
        android:text="Find Where Friends Eat"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="?android:attr/colorBackgroundFloating"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/listButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveFriendButton"
        android:layout_alignBottom="@+id/saveFriendButton"
        android:layout_toStartOf="@+id/saveFriendButton"
        android:background="@color/colorPrimary"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="List View"
        android:textColor="?android:attr/colorBackgroundFloating"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/zipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saveFriendButton"
        android:layout_alignStart="@+id/saveFriendButton"
        android:layout_marginBottom="35dp"
        android:background="@color/colorAccent"
        android:hint="Enter Zip Code"
        android:inputType="number"
        android:padding="5dp" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveFriendButton"
        android:layout_alignBottom="@+id/saveFriendButton"
        android:layout_toEndOf="@+id/saveFriendButton"
        android:background="@color/colorPrimary"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="Map View"
        android:textColor="?android:attr/colorForegroundInverse"
        android:textSize="15sp" />

    <Button
        android:id="@+id/saveFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="Saved Friends"
        android:textColor="?android:attr/colorBackgroundFloating"
        android:textSize="15sp" />

</RelativeLayout>